CACHE_MAX_SIZE=500
STATIC_CACHE_TTL=3600  # Shorter for staging

# Database Connection Pooling
DB_ECHO=true  # Enable for debugging
DB_POOL_PRE_PING=true

# HTTP/2 Settings
HTTP2_ENABLED=true
HTTP2_MAX_CONCURRENT_STREAMS=50

# ======================
# üîç SEARCH SETTINGS
# ======================
SEARCH_ENGINE=elasticsearch
